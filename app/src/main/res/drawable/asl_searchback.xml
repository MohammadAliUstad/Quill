<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/back"
        android:drawable="@drawable/vd_searchbackback"
        android:state_activated="true"/>

    <item
        android:id="@+id/search"
        android:drawable="@drawable/vd_searchbacksearch"/>

    <transition
        android:drawable="@drawable/avd_searchtoback"
        android:fromId="@id/search"
        android:toId="@id/back"/>

    <transition
        android:drawable="@drawable/avd_backtosearch"
        android:fromId="@id/back"
        android:toId="@id/search"/>

</animated-selector>